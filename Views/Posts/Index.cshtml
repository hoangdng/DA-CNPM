        <div class="divider-right mr-2"></div>
        <button type="submit" class="btn btn-primary post-btn mr-1"><i class="fas fa-list" aria-hidden="true"></i></button>
   
        <button type="submit" class="btn btn-primary post-btn"><i class="fas fa-th" aria-hidden="true"></i></button>
        
    </div>


<div class="d-flex justify-content-center">
    <table class="table table-hover thead-dark h-50 w-75 mx-2 post-db shadow-sm ">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody >
            @foreach (var item in Model)
            {
                <tr >

                    <td onClick="location.href='@Url.Action("Details", "Posts", new { Id = item.Id })'">
                        @Html.DisplayFor(modelItem => item.Title)
                        
                    </td>
                    <td onClick="location.href='@Url.Action("Details", "Posts", new { Id = item.Id })'">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td onClick="location.href='@Url.Action("Details", "Posts", new { Id = item.Id })'">
                        @Html.DisplayFor(modelItem => item.PostedDate)
                    </td>
                    <td onClick="location.href='@Url.Action("Details", "Posts", new { Id = item.Id })'">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="">
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
