@model IEnumerable<PetWeb.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="searchbar-container d-flex mt-4">
        <form class="form-inline d-flex flex-row mb-2 mr-auto">
            <i class="fas fa-search mr-2" aria-hidden="true"></i>
            <input type="text" class="form-control searchbar" id="" placeholder="Search">
        </form>
       
        <a asp-action="Create" class="btn btn-primary post-btn mr-1" role="button" aria-pressed="true"><i class="fa fa-plus" aria-hidden="true"></i></a>
        
        <a asp-action="Delete" class="btn btn-primary post-btn mr-2" role="button" aria-pressed="true" data-toggle="modal" data-target="#deleteModal"><i class="fa fa-minus" aria-hidden="true"></i></a>
        
