@model IEnumerable<PetWeb.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="searchbar-container d-flex mt-4">
        <form class="form-inline d-flex flex-row mb-2 mr-auto">
            <i class="fas fa-search mr-2" aria-hidden="true"></i>
            <input type="text" class="form-control searchbar" id="" placeholder="Search">
        </form>

        <a asp-action="Create" class="btn btn-primary post-btn mr-1" role="button" aria-pressed="true"><i class="fa fa-plus" aria-hidden="true"></i></a>
        
        <a asp-action="Delete" class="btn btn-primary post-btn mr-1  add-post-btn-container" role="button" aria-pressed="true"><i class="fa fa-minus" aria-hidden="true"></i></a>
        <div class="form-group ml-1 mr-1">
            <button type="submit" class="btn btn-primary post-btn"><i class="fas fa-list" aria-hidden="true"></i></button>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary post-btn"><i class="fas fa-th" aria-hidden="true"></i></button>
        </div>
    </div>


<div class="d-flex justify-content-center">
    <table class="table table-hover thead-dark h-50 w-75 mx-2 post-db shadow-sm ">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody >
            @foreach (var item in Model)
            {
                <tr >

                    <td onClick="location.href='@Url.Action("Details", "Posts", new { Id = item.Id })'">
                        @Html.DisplayFor(modelItem => item.Title)
                        
                    </td>
                    <td onClick="location.href='@Url.Action("Details", "Posts", new { Id = item.Id })'">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td onClick="location.href='@Url.Action("Details", "Posts", new { Id = item.Id })'">
                        @Html.DisplayFor(modelItem => item.PostedDate)
                    </td>
                    <td onClick="location.href='@Url.Action("Details", "Posts", new { Id = item.Id })'">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="">
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
