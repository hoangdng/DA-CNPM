@model PetWeb.Models.Post

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tiêu đề</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Trạng thái</label>
                <select asp-for="Status" class="form-control">
                    <option value="Available">Chưa có người giúp</option>
                    <option value="OnHold">Đang có người giúp</option>
                    <option value="Solved">Đã xong</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalId" class="control-label">Loại động vật</label>
                <select asp-for="AnimalId" class="form-control">
                    <option value="1">Mèo</option>
                    <option value="2">Chó</option>
                    <option value="3">Khác</option>
                </select>
                <span asp-validation-for="AnimalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Loại cứu trợ</label>
                <select asp-for="CategoryId" class="form-control">
                    <option value="1">Nhận nuôi</option>
                    <option value="2">Bệnh tật</option>
                    <option value="3">Giúp đỡ</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label">Khu vực:</label>
                <select asp-for="CityId" class="form-control">
                    <option value=1>Đà Nẵng</option>
                    <option value=2>Hà Nội</option>
                    <option value=3>Tp.HCM</option>
                    <option value=4>Khu vự khác</option>
                </select>
            </div>
            @*<div class="form-group">
                    <label asp-for="ImageURL" class="control-label">Link ảnh</label>
                    <input asp-for="ImageURL" class="" type="file" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                
                <input asp-for="ImageURL" value=@Model.ImageURL type="hidden" />

            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewHistory">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
