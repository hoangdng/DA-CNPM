@model IEnumerable<PetWeb.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" id="home">
    <h1 class="display-4 text-center">Bảng tin</h1>
</div>

<div class="card-columns">
    @foreach (var item in Model)
    {
    <div class="card">
        @*<div class="card-img" style="background-image: url('@item.') ;"></div>*@
        <img class="card-img-top" src="https://img.webmd.com/dtmcms/live/webmd/consumer_assets/site_images/article_thumbnails/other/cat_relaxing_on_patio_other/1800x1200_cat_relaxing_on_patio_other.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#myModal"
                        data-title="@item.Title" data-description="@item.Description" data-picture=""
                        data-user="@item.UserID" data-date="@item.PostedDate">
                    Xem chi tiết
                </button>
            </small>
        </div>
    </div>
    }
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    @*<div class="card-img" style="background-image: url('');">*@
                        <img class="card-img-top" src="https://img.webmd.com/dtmcms/live/webmd/consumer_assets/site_images/article_thumbnails/other/cat_relaxing_on_patio_other/1800x1200_cat_relaxing_on_patio_other.jpg" alt="Card image cap">
                    @*</div>*@
                    <div class="card-body">
                        <p class="card-text"></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <p id="user"></p>
                    <p id="date"></p>
                </div>
            </div>
        </div>
    </div>
</div>



