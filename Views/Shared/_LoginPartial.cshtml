@using Microsoft.AspNetCore.Identity
@inject SignInManager<PetWeb.Data.CustomUser> SignInManager
@inject UserManager<PetWeb.Data.CustomUser> UserManager

<ul class="navbar-nav ml-5">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Xin chào @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-outline-warning">Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
           <a class="nav-item nav-link" id="btn-adopt" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-item nav-link" id="btn-fac" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        </li>
    }
</ul>
